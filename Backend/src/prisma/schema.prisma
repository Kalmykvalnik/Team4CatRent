datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = []
}

model User {
  id         Int       @id @default(autoincrement())
  username   String    @unique
  password   String
  phone      String
  email      String    @unique
  firstname  String
  lastname   String
  middlename String
  sex        Boolean
  birthdate  DateTime
  creditcard String
  emailpermission Boolean
  smspermission Boolean
}